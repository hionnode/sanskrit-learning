---
import DarkModeToggle from '../components/islands/common/DarkModeToggle.tsx';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'MonkeyType शैली में हिन्दी टाइपिंग अभ्यास। INSCRIPT कीबोर्ड के क्रमिक पाठ।' } = Astro.props;
const locale = Astro.currentLocale ?? 'hi';
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const fullTitle = `${title} | संस्कृत शिक्षा`;
---
<html lang={locale} class="scroll-smooth h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{fullTitle}</title>

    <link rel="canonical" href={canonicalUrl.href} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.href} />

    <meta name="theme-color" content="#f8f6f6" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#211411" media="(prefers-color-scheme: dark)" />

    <link rel="preload" href="/fonts/TiroDevanagariSanskrit-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Manrope-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/NotoSansDevanagari-Regular.woff2" as="font" type="font/woff2" crossorigin />

    <script is:inline>
      try {
        if (localStorage.getItem('theme') === 'dark' || (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      } catch(e) {}
    </script>
  </head>
  <body class="h-full overflow-hidden font-sans bg-paper dark:bg-charcoal-900 selection:bg-turmeric/30 selection:text-ink">
    <!-- Background layers -->
    <div class="fixed inset-0 z-0 bg-gradient-palmleaf pointer-events-none opacity-80 mix-blend-multiply dark:opacity-0"></div>
    <div class="fixed inset-0 z-0 bg-gradient-lamp pointer-events-none dark:opacity-20"></div>

    <div class="relative flex h-full w-full flex-col z-10">
      <!-- Header -->
      <header class="px-6 md:px-8 py-4 w-full max-w-[1200px] mx-auto flex items-center justify-between shrink-0">
        <a
          href="/hi/learn"
          class="flex items-center gap-3 min-h-[44px] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-vermillion rounded"
        >
          <div class="w-8 h-8 rounded-full bg-vermillion flex items-center justify-center text-white shadow-card text-sm font-bold">
            श
          </div>
          <div class="flex flex-col">
            <span class="font-bold text-ink dark:text-stone-100 text-lg leading-none tracking-tight" lang="sa">संस्कृत शिक्षा</span>
            <span class="text-[10px] text-manuscript-accent dark:text-stone-500 uppercase tracking-widest">Touch Typing</span>
          </div>
        </a>
        <DarkModeToggle client:load />
      </header>

      <!-- Main content area -->
      <main class="flex-1 flex flex-col items-center w-full max-w-[1000px] mx-auto px-4 md:px-6 py-2 overflow-y-auto no-scrollbar min-h-0">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="p-3 text-center text-[10px] uppercase tracking-[0.2em] text-manuscript-accent/30 dark:text-stone-700 shrink-0">
        <p>Sanskrit Shiksha — open source</p>
      </footer>
    </div>
  </body>
</html>
